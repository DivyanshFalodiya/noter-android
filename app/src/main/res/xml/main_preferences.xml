<PreferenceScreen
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
        app:iconSpaceReserved="false"
        app:key="general"
        app:title="@string/general">

        <SwitchPreferenceCompat
            app:key="theme_preference"
            app:iconSpaceReserved="false"
            app:defaultValue="true"
            app:title="@string/dark_theme"/>

    </PreferenceCategory>

    <PreferenceCategory
        app:iconSpaceReserved="false"
        app:key="about"
        app:title="@string/about">

        <Preference
            app:key="version"
            app:title="Build version"
            app:iconSpaceReserved="false"
            app:summary="1.0"/>

    </PreferenceCategory>

</PreferenceScreen>